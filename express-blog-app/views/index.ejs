<%- include('header') %>

<!-- <h1><%#= title %></h1>
<p>Welcome to <%#= title %></p> -->

<h1 class='mb-4'>
  Articles
  <a href='/create' class='btn btn-outline-secondary float-end'>
  Create new article</a>
</h1>
<ul class="list-group">
  <% articles.forEach((article) => { %>
    <li class="list-group-item">
      <a href="/<%= article.id %>"><%= article.title %></a>
      <small>
        (Date <%= article.createdAt.toLocaleString("en-US",
        { month: 'short', day: 'numeric', year: 'numeric' }); %>)
      </small>
    </li>
  <% }); %>
</ul>

<%- include('footer') %>